<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/hrmscornorbackgroundcolor"
    android:padding="16dp"
    android:background="@drawable/layout_border_filled">

    <RelativeLayout
        android:id="@+id/hearder_profile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            app:cardCornerRadius="1000dp">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile"
        android:scaleType="fitXY"
        android:contentDescription="profile_image"
        android:layout_gravity="start"
        android:layout_centerVertical="true" />
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nav_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/cardview"
        android:textSize="16sp"
        android:fontFamily="@font/mulish_bold"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginStart="10sp"
        android:textColor="@color/hrmstext"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    <TextView
        android:id="@+id/nav_header_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-None-"
        android:layout_above="@+id/nav_header_location"
        android:textSize="13sp"
        android:fontFamily="@font/mulish_semibold"
        android:layout_toRightOf="@+id/cardview"
        android:layout_marginStart="10sp"
        android:textColor="@color/hrmstext"/>

    <TextView
        android:id="@+id/nav_header_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-None-"
        android:fontFamily="@font/mulish_medium"
        android:textSize="13sp"
        android:layout_marginStart="10sp"
        android:layout_toRightOf="@+id/cardview"
        android:layout_alignParentBottom="true"
        android:textColor="@color/icongrey"/>

        <TextView
        android:id="@+id/nav_header_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-None-"
        android:fontFamily="@font/mulish_medium"
        android:textSize="13sp"
        android:layout_marginStart="1dp"
        android:layout_toRightOf="@+id/nav_header_it"
        android:layout_alignParentBottom="true"
        android:textColor="@color/icongrey"/>
    </RelativeLayout>

</RelativeLayout>
