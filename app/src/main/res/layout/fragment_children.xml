<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hrmsbackgroundcolor"
    tools:context="com.example.fragments.ChildrenFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:fontFamily="@font/mulish_bold"
        android:textColor="@color/icongrey"
        android:layout_marginStart="20dp"
        android:textSize="12dp"/>

    <RelativeLayout
        android:id="@+id/countryProfRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/country"
        android:background="@drawable/layout_border_filled"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/childnametext_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="-None-"
            android:fontFamily="@font/mulish_medium"
            android:textColor="@color/hrmstext"
            android:textSize="14sp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:fontFamily="@font/mulish_bold"
        android:layout_below="@+id/countryProfRelative"
        android:textColor="@color/icongrey"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"/>

    <RelativeLayout
        android:id="@+id/stateProfRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/state"
        android:background="@drawable/layout_border_filled"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/childdobtext_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="DD-MM-YYYY"
            android:fontFamily="@font/mulish_medium"
            android:textColor="@color/hrmstext"
            android:textSize="14sp"/>
    </RelativeLayout>
    </RelativeLayout>
</FrameLayout>