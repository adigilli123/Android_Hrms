<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container2"
    android:background="@color/hrmsbackgroundcolor"
    tools:context="com.example.fragments.InboxFragment">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
>

     <ImageView
         android:id="@+id/jhbdsjb"
         android:layout_width="200dp"
         android:layout_height="100dp"
         android:layout_centerInParent="true"
         android:src="@drawable/ic_hrms" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Under Development"
         android:layout_below="@+id/jhbdsjb"
         android:layout_centerHorizontal="true"
         android:textSize="25dp"
         android:layout_marginTop="5dp"
         android:fontFamily="@font/mulish_bold"
         android:textColor="@color/app_lightblue"/>
 </RelativeLayout>
</FrameLayout>