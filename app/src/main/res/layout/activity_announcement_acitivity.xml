<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/hrmsbackgroundcolor"
    android:layout_height="match_parent"
    tools:context=".AnnouncementAcitivity">

    <RelativeLayout
        android:id="@+id/headerannouncement"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/gradient_background"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/announcemnet_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/left_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/mulish_bold"
            android:text="All Employees"
            android:textColor="@color/white"
            android:textSize="14dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/noannouncement"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/noannouncementimage"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/noannouncementtext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/noannouncement"
        android:text="Announcements"
        android:fontFamily="@font/mulish_bold"
        android:textColor="@color/hrmstext"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/noannouncementtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/hrmstext"
        android:fontFamily="@font/mulish_medium"
        android:layout_below="@+id/noannouncementtext1"
        android:text="There are no new announcements."
        android:textSize="13dp"/>
</RelativeLayout>